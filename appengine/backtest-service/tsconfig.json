{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "allowJs": false,
        "lib": [
            "ES2020"
        ],
        "target": "ES2020",
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "."
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}