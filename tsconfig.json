{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": false,
        "lib": ["ES2020"],
        "target": "ES2020",
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": ["src/**/*", "v2/**/*"],
    "exclude": ["node_modules"]
}
