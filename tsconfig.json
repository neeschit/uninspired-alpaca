{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": false,
        "lib": ["es2017"],
        "outDir": "./build",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
