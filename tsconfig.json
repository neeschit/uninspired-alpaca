{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": false,
        "lib": ["ES2020"],
        "target": "ES2020",
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "libs/**/*.ts", 
        "scripts/**/*.ts",
        "services/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
