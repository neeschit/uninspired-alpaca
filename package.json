{
  "name": "alpaca-play",
  "version": "1.0.0",
  "description": "",
  "dependencies": {
    "@neeschit/alpaca-trade-api": "1.4.6",
    "date-fns": "^2.9.0",
    "date-fns-tz": "^1.0.10",
    "dotenv": "^8.2.0",
    "fastify": "^2.13.1",
    "fs-extra": "^9.0.0",
    "pg": "^8.0.0",
    "uuid": "^8.3.2"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.13.12",
    "@types/pg": "^7.14.3",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^7.0.4",
    "ava": "^3.7.0",
    "jest": "^26.6.3",
    "sinon": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "test:ava": "NODE_ENV=test ava --watch --verbose",
    "test:ci": "NODE_ENV=test LOGLEVEL=4 ava **/src/**/*.spec.ts --verbose && yarn test:jest:ci",
    "test:jest:ci": "yarn test --ci --debug --config jest.config.ci.js",
    "build": "tsc",
    "build:w": "tsc -w",
    "backtest": "NODE_ENV=backtest node --expose-gc --enable-source-maps build/src/scripts/backtest.js",
    "b2": "NODE_ENV=backtest jest --config jest.config.backtest.js",
    "b2:debug": "NODE_ENV=backtest node --inspect-brk --inspect=9339 node_modules/.bin/jest --config jest.config.backtest.js",
    "fixDataForToday": "NODE_ENV=backtest node --expose-gc --enable-source-maps build/src/scripts/symbolDataFixer.js",
    "backtest:inspect": "NODE_ENV=backtest node --inspect --expose-gc --enable-source-maps build/src/scripts/backtest.js",
    "createSchemas": "node --enable-source-maps build/src/scripts/createSchemas.js",
    "cacheData": "node --enable-source-maps build/src/scripts/cacheData.js",
    "streamer": "SERVICE_NAME=streamer node --inspect=9696 --enable-source-maps build/src/deployable/streamer.service.js",
    "manager": "SERVICE_NAME=manager node --inspect=9697 --enable-source-maps build/src/deployable/manager.service.js",
    "screener": "SERVICE_NAME=screener node --inspect=9698 --enable-source-maps build/src/deployable/screener.service.js",
    "data": "SERVICE_NAME=data node --inspect=9699 --enable-source-maps build/src/deployable/data.service.js",
    "test": "NODE_ENV=test jest",
    "test:debug": "NODE_ENV=test node --inspect-brk --inspect=9339 node_modules/.bin/jest",
    "s2": "SERVICE_NAME=screener node --inspect=9698 --enable-source-maps build/v2/screener-api/screener.js",
    "t2": "SERVICE_NAME=screener node --inspect=9697 --enable-source-maps build/v2/trade-management-api/trade-manager.js",
    "o2": "SERVICE_NAME=streamer node --inspect=9696 --enable-source-maps build/v2/orchestrator-service/index.js"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/src/"
      }
    }
  }
}