{
  "name": "alpaca-play",
  "version": "1.0.0",
  "description": "",
  "dependencies": {
    "@neeschit/alpaca-trade-api": "1.4.2",
    "date-fns": "^2.9.0",
    "date-fns-tz": "^1.0.10",
    "dotenv": "^8.2.0",
    "fastify": "^2.13.1",
    "fs-extra": "^9.0.0",
    "pg": "^8.0.0",
    "uuid": "^7.0.3"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^13.13.12",
    "@types/pg": "^7.14.3",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^7.0.4",
    "ava": "^3.7.0",
    "jest": "^26.4.2",
    "sinon": "^9.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "test": "NODE_ENV=test ava --watch --verbose",
    "test:ci": "NODE_ENV=test LOGLEVEL=4 ava **/*.spec.ts --verbose",
    "build": "tsc",
    "build:w": "tsc -w",
    "backtest": "NODE_ENV=backtest node --expose-gc --enable-source-maps build/scripts/backtest.js",
    "backtest:inspect": "NODE_ENV=backtest node --inspect --expose-gc --enable-source-maps build/scripts/backtest.js",
    "createSchemas": "node --enable-source-maps build/scripts/createSchemas.js",
    "cacheData": "node --enable-source-maps build/scripts/cacheData.js",
    "streamer": "SERVICE_NAME=streamer node --inspect=9696 --enable-source-maps build/deployable/streamer.service.js",
    "manager": "SERVICE_NAME=manager node --inspect=9697 --enable-source-maps build/deployable/manager.service.js",
    "screener": "SERVICE_NAME=screener node --inspect=9698 --enable-source-maps build/deployable/screener.service.js",
    "data": "SERVICE_NAME=data node --inspect=9699 --enable-source-maps build/deployable/data.service.js",
    "test:jest": "NODE_ENV=test jest"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      }
    }
  }
}
